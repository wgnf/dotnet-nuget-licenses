        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <WarningLevel>5</WarningLevel>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="SlnParser" Version="2.0.0" />
        <PackageReference Include="System.IO.Abstractions" Version="13.2.47" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="CliTool\cli-bin\dotnet.exe" />
      <EmbeddedResource Include="CliTool\cli-bin\dotnet.exe">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </EmbeddedResource>
      <None Remove="CliTool\cli-bin\nuget.exe" />
      <EmbeddedResource Include="CliTool\cli-bin\nuget.exe">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </EmbeddedResource>
      <None Remove="CliTool\cli-bin\host\fxr\6.0.1\hostfxr.dll" />
      <EmbeddedResource Include="CliTool\cli-bin\host\fxr\6.0.1\hostfxr.dll">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>

</Project>
